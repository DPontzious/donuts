<div class="container">
    <h1>Donuts!</h1>
    <div class="row">
        <div class="col" id="list">
            <h2>DONUTS TO EAT</h2>

            <ul>
                {{#each donuts}}
                {{#unless devoured}}
                {{> donuts/donut-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col" id="list">
            <h2>YUM YUM ALL GONE</h2>

            <ul>
                {{#each donuts}}
                {{#if devoured}}
                {{> donuts/donut-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row" id="newDonut">
        <div class="col">
            <div class="row">
                <h2>Add your own donut</h2>
            </div>
            <br>
            <div class="row">
                <form class="create-form">

                    <div class="form-group">
                        <label for="dnut">Donut Type:</label>
                        <input type="text" id="dnut" name="name">
                    </div>
                    <button type="submit" id="submit">Add a Donut</button>
                </form>
            </div>
        </div>
    </div>
</div>